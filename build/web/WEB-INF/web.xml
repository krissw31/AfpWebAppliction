<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MyTestServlet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginVerifyServlet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.LoginVerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BienvenueServelet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.BienvenueServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FolderServlet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.FolderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FolderPublisherServlet</servlet-name>
        <servlet-class>fr.kriss.afp.controller.FolderPublisherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyTestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginVerifyServlet</servlet-name>
        <url-pattern>/logVerif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BienvenueServelet</servlet-name>
        <url-pattern>/BienvenueServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FolderServlet</servlet-name>
        <url-pattern>/folder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FolderPublisherServlet</servlet-name>
        <url-pattern>/publisher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
